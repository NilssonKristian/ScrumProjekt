@model ScrumProjekt.Models.CommentViewModel
@using (Html.BeginForm("PostComment", "Post", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="card my-4">
            <form>
                <div class="form-group">
                    @Html.HiddenFor(model => model.PostID)
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", placeholder = "Comment..." } })
                        <br />
                        <button type="submit" value="send" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </form>
    </div>
}